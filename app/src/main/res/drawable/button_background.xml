<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Button color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- This is the state for when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C"/> <!-- Darker shade for the button when pressed -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
